    },
    {
      "type": "logo",
      "name": "Logo Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Footer Logo"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Footer",
      "blocks": [{ "type": "menu" }, { "type": "menu" }, { "type": "text" }, { "type": "logo" }]
    }
  ]
}
{% endschema %}
