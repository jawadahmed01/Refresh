      "label": "Facebook URL"
    },
    {
      "type": "image_picker",
      "id": "twitter_image",
      "label": "Twitter Icon"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "image_picker",
      "id": "instagram_image",
      "label": "Instagram Icon"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "image_picker",
      "id": "youtube_image",
      "label": "YouTube Icon"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "YouTube URL"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "menu_heading",
          "label": "Menu Heading"
        },
        {
          "type": "link_list",
          "id": "footer_menu",
          "label": "Select Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text Column",
      "settings": [
        {
          "type": "text",
