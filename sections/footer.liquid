<footer class="footer">
  <div class="container">
    <div class="footer-main-wrap">
      <!-- ✅ Email Subscription Snippet -->
      {% if section.settings.show_subscription %}
        <div class="email-subscription">
          {% render 'email-subscription' %}
        </div>
      {% endif %}

      <!-- ✅ Footer Menus -->
      <div class="footer-content-wrap">
        <div class="footer-top-bar">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'menu' %}
                <div class="footer-menu-wrap">
                  {% if block.settings.menu_heading != blank %}
                    <h5>{{ block.settings.menu_heading }}</h5>
                  {% endif %}
                  {% if block.settings.footer_menu != blank %}
                    <div class="footer-links-wrap">
                      {% for link in linklists[block.settings.footer_menu].links %}
                        <a href="{{ link.url }}">{{ link.title }}</a>
                      {% endfor %}
                    </div>
                  {% endif %}
                </div>

              {% when 'text' %}
                <div class="footer-menu-wrap">
                  {% if block.settings.title != blank %}
                    <h5>{{ block.settings.title }}</h5>
                  {% endif %}
                  <p>{{ block.settings.text }}</p>
                </div>

              {% when 'logo' %}
                <div class="footer-logo-wrap">
                  {% if block.settings.logo != blank %}
                    <img src="{{ block.settings.logo | image_url }}" alt="Footer Logo">
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>

        <!-- ✅ Social Media Icons -->
        <div class="footer-social-wrap">
          <div class="footer-social-icon-wrap">
            {% if section.settings.facebook_image != blank %}
              <a href="{{ section.settings.facebook_url }}" target="_blank">
                <img src="{{ section.settings.facebook_image | image_url: width: 24 }}" alt="Facebook">
              </a>
            {% endif %}
            {% if section.settings.twitter_image != blank %}
              <a href="{{ section.settings.twitter_url }}" target="_blank">
                <img src="{{ section.settings.twitter_image | image_url: width: 24 }}" alt="Twitter">
              </a>
            {% endif %}
            {% if section.settings.instagram_image != blank %}
              <a href="{{ section.settings.instagram_url }}" target="_blank">
                <img src="{{ section.settings.instagram_image | image_url: width: 24 }}" alt="Instagram">
              </a>
            {% endif %}
            {% if section.settings.youtube_image != blank %}
              <a href="{{ section.settings.youtube_url }}" target="_blank">
                <img src="{{ section.settings.youtube_image | image_url: width: 24 }}" alt="YouTube">
              </a>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="footer-line"></div>
      <div class="footer-copy-right">
        <p>© {{ 'now' | date: '%Y' }}, {{ shop.name }} — Powered by Shopify</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-primary);
    color: var(--color-secondary);
    padding: 80px 0;
  }
  .footer-main-wrap {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
  .footer-content-wrap {
    display: flex;
    flex-direction: column;
    gap: 80px;
    justify-content: center;
    align-items: center;
  }
  .footer-menu-wrap {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .footer-links-wrap {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .footer-top-bar {
    display: flex;
    flex-direction: column;
  }
  .footer-top-bar {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
  .footer-menu-wrap h5 {
    color: var(--color-secondary);
    margin-bottom: 12px;
  }
  .footer-links-wrap {
  }
  .footer-top-bar {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
  }
  .footer-menu-wrap h5 {
    color: var(--color-secondary);
    margin-bottom: 12px;
  }
  .footer-links-wrap {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .footer-links-wrap a {
    text-decoration: none;
    color: var(--color-secondary);
    transition: color 0.3s;
  }
  .footer-links-wrap a:hover {
    color: #fff;
  }
  .footer-logo-wrap img {
    max-width: 150px;
    height: auto;
  }
  .footer-social-wrap {
    text-align: center;
  }
  .footer-social-icon-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
  }
  .footer-social-icon-wrap img {
    width: 28px;
    height: 28px;
    transition: opacity 0.3s;
  }
  .footer-social-icon-wrap img:hover {
    opacity: 0.7;
  }
  .footer-line {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    margin-top: 20px;
  }
  .footer-copy-right {
    text-align: center;
    font-size: 13px;
  }
  @media (max-width: 768px) {
    .footer-top-bar {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 480px) {
    .footer-top-bar {
      grid-template-columns: 1fr;
    }
    .footer-logo-wrap {
      text-align: center;
    }
  }
</style>

