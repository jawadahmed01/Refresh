    const productCount = document.getElementById('product-count');

    if (priceFilter) {
      priceFilter.addEventListener('change', function () {
        console.log('Price filter changed to:', this.value);
        // Add filter logic or AJAX for real filtering if needed
      });
    }

    if (productCount) {
      productCount.textContent = document.querySelectorAll('.collection-product-card').length;
    }
  });
</script>
