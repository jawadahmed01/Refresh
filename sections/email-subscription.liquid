<div class="subscription" style="background-color: {{ section.settings.background }};">
  <h2 class="subscription__title" style="color: {{ section.settings.text_color }};">
    {{ section.settings.title }}
  </h2>
  <p class="subscription__text" style="color: {{ section.settings.text_color }};">
    {{ section.settings.text }}
  </p>

  {% form 'customer', id: 'newsletter_form', class: 'subscription__form' %}
    <input type="hidden" name="contact[tags]" value="newsletter">
    <input
      type="email"
      name="contact[email]"
      id="Email"
      placeholder="{{ section.settings.placeholder }}"
      required
      class="subscription__input"
      aria-label="Email address"
      style="background-color: {{ section.settings.background }}; color: {{ section.settings.text_color }};"
    >
    <button
      type="submit"
      class="subscription__btn"
      style="background-color: {{ section.settings.text_color }}; color: {{ section.settings.background }};"
    >
      {{ section.settings.button }}
    </button>
    {% if form.posted_successfully? %}
      <p class="subscription__success">Thank you for subscribing!</p>
    {% elsif form.errors %}
      <p class="subscription__error">Please enter a valid email address.</p>
    {% endif %}
  {% endform %}
</div>

<style>
  .subscription {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
    text-align: center;
  }
  .subscription__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 10px;
  }
  .subscription__text {
    font-size: 1.1rem;
    margin-bottom: 20px;
    max-width: 500px;
  }
  .subscription__form {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border: 1px solid var(--color-border, #ddd);
    border-radius: 5px;
    padding: 10px;
    width: 100%;
    max-width: 500px;
  }
  .subscription__input {
    flex: 1;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    outline: none;
    font-size: 1rem;
    background-color: transparent;
  }
  .subscription__btn {
    padding: 10px 20px;
    background-color: var(--color-primary, #000);
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-weight: 600;
  }
  .subscription__btn:hover {
    background-color: var(--color-primary-dark, #333);
  }
  .subscription__success {
    margin-top: 10px;
    color: green;
  }
  .subscription__error {
    margin-top: 10px;
    color: red;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .subscription__form {
      flex-direction: column;
    }
    .subscription__input,
    .subscription__btn {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Email Subscribe",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Get the latest news and updates from us."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button Text",
      "default": "Subscribe"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Email Subscribe",
      "category": "Newsletter"
    }
  ]
}
{% endschema %}
