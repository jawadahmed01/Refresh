<section class="hero">
  <div class="container">
    <div class="hero-content-wrap">
      <img src="{{ section.settings.hero_image | img_url: 'master' }}">
      <div class="hero-text-wrap">
        <h1>{{ section.settings.hero_title }}</h1>
        <p>{{ section.settings.hero_description }}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 80px 0;
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-content-wrap {
    position: relative;
    z-index: 1;
  }

  .hero-text-wrap {
    text-align: center;
  }

  .hero-text-wrap h1 {
    font-size: 48px;
    margin-bottom: 20px;
  }

  .hero-content-wrap {
    display: flex;
    align-items: center;
    justify-content: left;
  }

  .hero-content-wrap img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-text-wrap {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 600px;
    width: 100%;
    padding: 30px;
    border-radius: 10px;
    background-color: var(--color-secondary);
    color: var(--color-primary);
  }
</style>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Hero Description"
    }
  ]
}
{% endschema %}
