<section class="hero">
  {% if section.settings.hero_image %}
    <img
      class="hero-bg"
      src="{{ section.settings.hero_image | img_url: 'master' }}"
      alt="{{ section.settings.hero_title }}"
    >
  {% endif %}

  <div class="container">
    <div class="hero-content-wrap">
      <div class="hero-text-wrap">
        <h1>{{ section.settings.hero_title }}</h1>
        <p>{{ section.settings.hero_description }}</p>
      </div>
    </div>
  </div>
</section>

<style>
  /* === HERO SECTION === */
  .hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    color: var(--color-primary);
  }

  /* Background Image */
  .hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  /* Content Wrapper */
  .hero-content-wrap {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: flex-start; /* Text on left side */
    height: 100%;
  }

  /* Text Box */
  .hero-text-wrap {
    background: rgba(255, 255, 255, 0.85); /* semi-transparent white for readability */
    color: #000;
    padding: 30px;
    border-radius: 16px;
    max-width: 550px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    backdrop-filter: blur(6px);
  }

  /* === RESPONSIVE === */
  @media (max-width: 992px) {
    .hero {
      height: 80vh;
      padding: 40px 0;
    }

    .hero-content-wrap {
      justify-content: center;
      text-align: center;
    }

    .hero-text-wrap {
      background: rgba(255, 255, 255, 0.9);
      color: #000;
      padding: 30px;
      max-width: 90%;
      text-align: center;
      align-items: center;
    }
  }

  @media (max-width: 576px) {
    .hero {
      height: auto;
      padding: 60px 0;
    }

    .hero-text-wrap {
      padding: 20px;
      border-radius: 10px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Hero Description",
      "default": "Discover our latest products and exclusive offers."
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Banner"
    }
  ]
}
{% endschema %}
