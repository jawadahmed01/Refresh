<section class="blog-grid">
  <div class="container">
    <div class="blog-grid-main">
      {% assign blog_handle = section.settings.blog | default: 'news' %}
      {% for article in blogs[blog_handle].articles limit: section.settings.grid_item_count %}
        <div class="blog-grid-item">
          {% if article.image %}
            <a href="{{ article.url }}">
              <img
                src="{{ article.image | img_url: 'large' }}"
                alt="{{ article.title | escape }}"
              >
            </a>
          {% endif %}
          <div class="blog-grid-text-wrap">
            <h4>{{ article.title }}</h4>
            <h6>{{ article.published_at | date: '%B %d, %Y' }}</h6>
            <p>{{ article.excerpt | strip_html | truncate: 100 }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    {% assign blog_handle = section.settings.blog | default: 'news' %}
    <div class="blog-grid-footer">
      <a href="{{ blogs[blog_handle].url }}" class="button">View all</a>
    </div>
  </div>
</section>

<style>
  .blog-grid {
    padding: 80px 0;
    background-color: var(--color-background);
  }
  .blog-grid-main {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }
  .blog-grid-item {
    border: 1px solid var(--color-primary);
    border-radius: 8px;
    padding: 15px;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: 20px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .blog-grid-text-wrap {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .blog-grid-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  .blog-grid-item img {
    max-width: 100%;
    border-radius: 8px;
    object-fit: cover;
    height: 250px;
    transition: transform 0.3s ease;
  }
  .blog-grid-item:hover img {
    transform: scale(1.05);
  }
  .blog-grid-item h4 {
    color: var(--color-text);
  }
  .blog-grid-item p {
    color: var(--color-text);
  }
  @media (max-width: 992px) {
    .blog-grid-main {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 768px) {
    .blog-grid {
      padding: 40px 0;
    }
    .blog-grid-main {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>

{% schema %}
{
  "name": "Blog Card",
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Select Blog",
      "default": "news"
    },
    {
      "type": "number",
      "id": "grid_item_count",
      "label": "Number of Articles",
      "default": 3,
      "min": 1,
      "max": 12
    }
  ],
  "presets": [
    {
      "name": "Blog Card",
      "category": "Blog"
    }
  ]
}
{% endschema %}
