<section class="product-grid">
  <div class="container">
    <div class="product-grid-main {% if section.settings.layout == 'reverse' %}reverse{% endif %}">
      <!-- Left content area -->
      <div class="product-grid-left">
        <h2>{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p>{{ section.settings.subheading }}</p>
        {% endif %}
        <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>

        {% if section.settings.collection %}
          <div class="product-grid-items">
            {% for product in collections[section.settings.collection].products
              limit: section.settings.products_limit
            %}
              <div class="product-grid-item">
                <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                <h4>{{ product.title }}</h4>
                <p>{{ product.price | money }}</p>
                <a href="{{ product.url }}" class="btn-secondary">View Product</a>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Right image area -->
      <div class="product-grid-right">
        {% if section.settings.image %}
          <img src="{{ section.settings.image | img_url: 'large' }}" alt="{{ section.settings.heading }}">
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .product-grid {
    padding: 80px 0;
  }

  .product-grid-main {
    display: flex;
    align-items: center;
    gap: 40px;
    background-color: var(--color-secondary);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    flex-direction: row;
  }

  .product-grid-main.reverse {
    flex-direction: row-reverse;
  }

  .product-grid-left {
    flex: 1;
    padding: 40px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .product-grid-right {
    flex-basis: 50%;
  }

  .product-grid-main.reverse .product-grid-right {
    flex-basis: 35%;
  }

  .product-grid-right img {
    width: 100%;
    height: auto;
    border-radius: 0;
    object-fit: cover;
  }

  .product-grid-items {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    margin-top: 20px;
  }

  .product-grid-item {
    background: #fff;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
  }

  .product-grid-item img {
    width: 100%;
    border-radius: 8px;
    margin-bottom: 10px;
  }

  .btn,
  .btn-secondary {
    display: inline-block;
    background: var(--color-primary);
    color: #fff;
    text-decoration: none;
    padding: 10px 18px;
    border-radius: 6px;
    font-weight: 600;
  }

  .btn-secondary {
    background: transparent;
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .product-grid-main {
      flex-direction: column;
    }

    .product-grid-right,
    .product-grid-main.reverse .product-grid-right {
      flex-basis: 100%;
    }

    .product-grid-items {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Product Grid with Image Layout",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Shop the latest products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Number of Products to Show",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 4
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout Direction",
      "options": [
        { "value": "normal", "label": "Image Right" },
        { "value": "reverse", "label": "Image Left" }
      ],
      "default": "normal"
    }
  ],
  "presets": [
    {
      "name": "Product Grid with Image Layout",
      "category": "Image"
    }
  ]
}
{% endschema %}
