{% comment %}
  Splide.js Slideshow Section
  - Loop, autoplay, arrows, dots, focus center
  - 1 slide per page
{% endcomment %}

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4/dist/css/splide.min.css"
>

<style>
  .slideshow-slide {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 80px 0px;
    height: 85vh;
  }
  .slideshow-slide img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  .slideshow-text-wrap {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 30px;
    background: var(--color-secondary);
    max-width: 600px;
    margin: 0 auto;
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
  .splide__arrow--prev {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--color-primary);
    color: var(--color-secondary);
    font-size: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid var(--color-primary);
    transition: border 0.3s ease;
  }
  .splide__arrow--prev:hover {
    background: var(--color-transparent);
    border: 1px solid var(--color-primary);
  }
</style>

<section class="slideshow">
  <div class="slideshow-content-wrap">
    <!-- Splide root -->
    <section id="main-slider" class="splide" aria-label="Gallery demo">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide slideshow-slide">
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.alt | escape }}"
                loading="lazy"
              >
              <div class="slideshow-text-wrap">
                <h1>{{ block.settings.heading | escape }}</h1>
                <p>{{ block.settings.description | escape }}</p>
                <a href="{{ block.settings.link | escape }}" class="button">
                  {{- block.settings.button_text | escape -}}
                </a>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Arrows -->
      <div class="splide__arrows" aria-hidden="false">
        <button class="splide__arrow splide__arrow--prev" type="button" aria-label="Previous">‹</button>
        <button class="splide__arrow splide__arrow--next" type="button" aria-label="Next">›</button>
      </div>
    </section>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4/dist/js/splide.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const splide = new Splide('#main-slider', {
      type: 'loop',
      perPage: 1,
      focus: 'center',
      autoplay: true,
      interval: 3000,
      pauseOnHover: true,
      pauseOnFocus: true,
      arrows: true,
      pagination: true,
      keyboard: 'global',
      trimSpace: false,
      speed: 600,
      breakpoints: {
        640: {
          perPage: 1,
          focus: 'center',
        },
      },
    });

    splide.on('mounted', () => {
      const bullets = document.querySelectorAll('#main-slider .splide__pagination button');
      bullets.forEach((btn, i) => {
        btn.setAttribute('aria-label', `Go to slide ${i + 1}`);
      });
    });

    splide.mount();
  });
</script>

{% schema %}
{
  "name": "Splide Slideshow",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Image Alt Text"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading Here"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Your slide description goes here."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Splide Slideshow",
      "category": "Slideshow"
    }
  ]
}
{% endschema %}
