{% comment %}
  Splide.js Slideshow Section
  - Loop, autoplay, arrows, dots, focus center
  - 1 slide per page
{% endcomment %}

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4/dist/css/splide.min.css"
>

<section class="slideshow">
  <div class="slideshow-content-wrap">
    <!-- Splide root -->
    <section id="main-slider" class="splide" aria-label="Gallery demo">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              {% if block.settings.image != blank %}
                <img
                  src="{{ block.settings.image | image_url: width: 1600 }}"
                  alt="{{ block.settings.alt | escape }}"
                  loading="lazy"
                >
              {% else %}
                {{ block.settings.text }}
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Arrows -->
      <div class="splide__arrows" aria-hidden="false">
        <button class="splide__arrow splide__arrow--prev" type="button" aria-label="Previous">‹</button>
        <button class="splide__arrow splide__arrow--next" type="button" aria-label="Next">›</button>
      </div>
    </section>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4/dist/js/splide.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const splide = new Splide('#main-slider', {
      type: 'loop',
      perPage: 1,
      focus: 'center',
      autoplay: true,
      interval: 3000,
      pauseOnHover: true,
      pauseOnFocus: true,
      arrows: true,
      pagination: true,
      keyboard: 'global',
      trimSpace: false,
      speed: 600,
      breakpoints: {
        640: {
          perPage: 1,
          focus: 'center',
        },
      },
    });

    splide.on('mounted', () => {
      const bullets = document.querySelectorAll('#main-slider .splide__pagination button');
      bullets.forEach((btn, i) => {
        btn.setAttribute('aria-label', `Go to slide ${i + 1}`);
      });
    });

    splide.mount();
  });
</script>

{% schema %}
{
  "name": "Splide Slideshow",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Image Alt Text"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Fallback Text (if no image)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Splide Slideshow",
      "category": "Slideshow"
    }
  ]
}
{% endschema %}
