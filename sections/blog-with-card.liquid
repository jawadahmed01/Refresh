<section class="blog-card">
  <div class="container">
    <div class="blog-card-content-wrap">
      {% if section.settings.heading != blank %}
        <div class="blog-card-heading-wrap">
          <h2>{{ section.settings.heading }}</h2>
        </div>
      {% endif %}

      <div class="blog-card-list-wrap">
        {% for block in section.blocks %}
          {% assign article = articles[block.settings.article] %}
          {% if article %}
            <div class="blog-card-item">
              {% if article.image %}
                <img src="{{ article.image | img_url: 'medium' }}" alt="{{ article.title }}">
              {% endif %}
              <h5>{{ article.title }}</h5>
              <p>{{ article.published_at | date: '%B %d, %Y' }}</p>
              <p>{{ article.excerpt_or_content | strip_html | truncate: 100 }}</p>
              <a href="{{ article.url }}">Read More</a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .blog-card {
    padding: 80px 0;
  }

  .blog-card-content-wrap {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .blog-card-list-wrap {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .blog-card-item {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .blog-card-item img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .blog-card-item a {
    color: var(--color-primary);
    text-decoration: underline;
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .blog-card-list-wrap {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .blog-card-list-wrap {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Blog With Card",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest Blog Posts"
    }
  ],
  "blocks": [
    {
      "type": "article",
      "name": "Blog Post",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Select Blog Post"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blog With Card",
      "category": "Blog",
      "blocks": [
        {
          "type": "article"
        },
        {
          "type": "article"
        },
        {
          "type": "article"
        }
      ]
    }
  ]
}
{% endschema %}
