<section class="blog-card">
  <div class="container">
    <div class="blog-card-content-wrap">
      {% if section.settings.heading != blank %}
        <div class="blog-card-heading-wrap">
          <h2>{{ section.settings.heading }}</h2>
        </div>
      {% endif %}

      <div class="blog-card-list-wrap">
        {% for block in section.blocks %}
          {% assign article = articles[block.settings.article] %}
          {% if article %}
            <div class="blog-card-item">
              {% if article.image %}
                <img src="{{ article.image | img_url: 'medium' }}" alt="{{ article.title }}">
              {% endif %}
              <h5>{{ article.title }}</h5>
              <p class="blog-card-date">{{ article.published_at | date: '%B %d, %Y' }}</p>
              <p>{{ article.excerpt_or_content | strip_html | truncate: 100 }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .blog-card {
    padding: 80px 0;
  }

  .blog-card-content-wrap {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .blog-card-list-wrap {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .blog-card-item {
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 15px;
    border: 1px solid var(--color-primary);
    border-radius: 10px;
    transition: all 0.3s ease-in-out;
  }
  .blog-card-item:hover img {
    transform: scale(1.1);
  }

  .blog-card-item img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }
  .blog-card-date {
    font-size: 13px;
    text-transform: uppercase;
    color: var(--color-primary);
  }

  /* Responsive */
  @media (max-width: 992px) {
    .blog-card-list-wrap {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .blog-card {
      padding: 40px 0px;
    }
    .blog-card-list-wrap {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Blog With Card",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest Blog Posts"
    }
  ],
  "blocks": [
    {
      "type": "article",
      "name": "Blog Post",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Select Blog Post"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blog With Card",
      "category": "Blog",
      "blocks": [
        {
          "type": "article"
        },
        {
          "type": "article"
        },
        {
          "type": "article"
        }
      ]
    }
  ]
}
{% endschema %}
