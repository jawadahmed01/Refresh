<section class="logo-with-text">
  <div class="container">
    <div class="logo-with-text-content">
      <div class="logo-with-text-heading">
        <p>{{ section.settings.section_heading }}</p>
        <h2>{{ section.settings.section_subheading }}</h2>
      </div>
      <div class="logo-with-text-main">
        {% for block in section.blocks %}
          <div class="logo-with-text-item">
            {% if block.settings.logo %}
              <img
                src="{{ block.settings.logo | img_url: 'medium' }}"
                alt="{{ block.settings.caption | escape }}"
              >
            {% endif %}
            {% if block.settings.heading != blank %}
              <h5>{{ block.settings.heading }}</h5>
            {% endif %}
            {% if block.settings.caption != blank %}
              <p>{{ block.settings.caption }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .logo-with-text {
    padding: 80px 0;
    background-color: var(--color-primary);
    color: var(--color-background);
  }

  .logo-with-text-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }

  .logo-with-text-heading {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .logo-with-text-item h5 {
    color: var(--color-secondary);
  }
  .logo-with-text-heading h2 {
    color: var(--color-secondary);
  }

  .logo-with-text-heading p {
    text-transform: uppercase;
  }

  .logo-with-text-main {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    align-items: center;
    gap: 20px;
  }

  .logo-with-text-item {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .logo-with-text-item img {
    max-width: 80px;
    height: auto;
    object-fit: contain;
  }

  .logo-with-text-item p {
    color: var(--color-text);
  }
  @media (max-width: 992px) {
    .logo-with-text-main {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 600px) {
    .logo-with-text {
      padding: 40px 0;
    }
    .logo-with-text-main {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Logo With Text",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "section_subheading",
      "label": "Section Subheading",
      "default": "Your Subheading Here"
    }
  ],
  "blocks": [
    {
      "type": "logo_item",
      "name": "Logo Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Logo Heading",
          "default": "Your Heading Here"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Logo Caption",
          "default": "Your Caption Here"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Logo With Text",
      "category": "Image"
    }
  ]
}
{% endschema %}
