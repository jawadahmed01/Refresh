<section class="logo-grid">
  <div class="container">
    <div class="logo-grid-main">
      <div class="logo-grid-item">
        <img src="{{ section.settings.logo | img_url: 'medium' }}" alt="{{ section.settings.logo.alt }}">
        <p>{{ section.settings.logo.caption }}</p>
      </div>
    </div>
  </div>
</section>
<style>
  .logo-grid {
    padding: 80px 0;
    background-color: var(--color-secondary);
  }
  .logo-grid-main {
    display: flex;
    justify-content: center;
    gap: 40px;
    flex-wrap: wrap;
  }
  .logo-grid-item {
    text-align: center;
    max-width: 150px;
  }
  .logo-grid-item img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
    margin-bottom: 10px;
  }
  .logo-grid-item p {
    font-size: 14px;
    color: var(--color-text);
  }
</style>
{% schema %}
{
  "name": "Logo Grid",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Logo Caption",
      "default": "Your Caption Here"
    }
  ],
  "presets": [
    {
      "name": "Logo Grid",
      "category": "Image"
    }
  ]
}
{% endschema %}
