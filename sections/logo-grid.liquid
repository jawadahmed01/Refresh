<section class="logo-grid">
  <div class="container">
    <div class="logo-grid-main">
      {% for block in section.blocks %}
        <div class="logo-grid-item">
          {% if block.settings.logo %}
            <img
              src="{{ block.settings.logo | img_url: 'medium' }}"
              alt="{{ block.settings.caption | escape }}"
            >
          {% endif %}
          {% if block.settings.caption != blank %}
            <h5>{{ block.settings.caption }}</h5>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .logo-grid {
    padding: 80px 0;
  }
  .logo-grid-main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    align-items: center;
    gap: 40px;
  }
  .logo-grid-item {
    text-align: center;
    max-width: 150px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
  }
  .logo-grid-item img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
    margin-bottom: 10px;
    transition: transform 0.3s ease;
  }
  .logo-grid-item:hover img {
    transform: scale(1.05);
  }
  .logo-grid-item p {
    font-size: 14px;
    color: var(--color-text);
  }
  @media (max-width: 600px) {
    .logo-grid {
      padding: 40px 0;
    }
  }
</style>

{% schema %}
{
  "name": "Logo Grid",
  "settings": [],
  "blocks": [
    {
      "type": "logo_item",
      "name": "Logo Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Logo Caption",
          "default": "Your Caption Here"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Logo Grid",
      "category": "Image"
    }
  ]
}
{% endschema %}
