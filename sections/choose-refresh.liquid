<section class="logo-grid">
  <div class="container">
    <div class="choose-refresh-content">
      <div class="choose-refresh-heading">
        <p>{{ section.settings.section_heading }}</p>
        <h2>{{ section.settings.section_subheading }}</h2>
      </div>
      <div class="logo-grid-main">
        {% for block in section.blocks %}
          <div class="logo-grid-item">
            {% if block.settings.logo %}
              <img
                src="{{ block.settings.logo | img_url: 'medium' }}"
                alt="{{ block.settings.caption | escape }}"
              >
            {% endif %}
            {% if block.settings.heading != blank %}
              <h5>{{ block.settings.heading }}</h5>
            {% endif %}
            {% if block.settings.caption != blank %}
              <p>{{ block.settings.caption }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .choose-refresh-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }
  .choose-refresh-heading {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .choose-refresh-heading h2 {
    color: var(--color-secondary);
  }
  .choose-refresh-heading p {
    text-transform: uppercase;
  }
  .logo-grid {
    padding: 80px 0;
    background-color: var(--color-primary);
    color: var(--color-background);
  }
  .logo-grid-main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    align-items: center;
    gap: 40px;
    flex-wrap: wrap;
  }
  .logo-grid-item {
    text-align: center;
  }
  .logo-grid-item img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }
  .logo-grid-item p {
    color: var(--color-text);
  }
</style>

{% schema %}
{
  "name": "Choose Refresh",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Why Choose Refresh"
    },
    {
      "type": "text",
      "id": "section_subheading",
      "label": "Section Subheading",
      "default": "Your Subheading Here"
    }
  ],
  "blocks": [
    {
      "type": "logo_item",
      "name": "Logo Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Logo Heading",
          "default": "Your Heading Here"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Logo Caption",
          "default": "Your Caption Here"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Choose Refresh",
      "category": "Image"
    }
  ]
}
{% endschema %}
