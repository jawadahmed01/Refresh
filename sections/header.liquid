<style>
  header {
    width: 100%;
    background: var(--color-primary);
    position: sticky;
    top: 0;
    z-index: 1000;
    transition: background 0.3s ease;
  }
  .header-content-wrap {
    display: flex;
    flex-direction: column !important;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    padding: 20px 0px;
  }
  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 10px;
    width: 100%;
  }
  .header-logo img {
    max-height: 50px;
    width: auto;
  }
  .header-logo-text {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-secondary);
    text-decoration: none;
  }
  .header-cart {
    position: relative;
  }
  .header-cart-link {
    color: var(--color-secondary);
    text-decoration: none;
    position: relative;
    display: flex;
    align-items: center;
  }
  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: var(--color-secondary);
    color: var(--color-primary);
    border-radius: 50%;
    padding: 2px 6px;
    font-size: 0.75rem;
    font-weight: bold;
  }
  .header-nav {
    display: none;
    flex-direction: column;
    width: 100%;
    transition: max-height 0.3s ease;
  }
  .header-nav.active {
    display: flex;
  }
  .header-nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
    width: 100%;
    justify-content: center;
    align-items: center;
  }
  .header-nav-item a {
    color: var(--color-secondary);
    text-decoration: none;
    font-size: 1rem;
  }
  .header-search-wrap {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .header-search-icon {
    color: var(--color-secondary);
    cursor: pointer;
  }
  .header-search-form {
    position: absolute;
    inset: 0px;
    width: 100%;
    background: var(--color-primary);
    display: flex !important;
    justify-content: center;
    align-items: center;
    padding: 10px;
    z-index: 1001;
    transform: translateY(-120%);
    transition: transform 0.3s ease;
  }
  .header-search-form.active {
    transform: translateY(0%);
  }
  .header-search-close {
    position: absolute;
    top: 10px;
    right: 30px;
    color: var(--color-secondary);
    cursor: pointer;
    font-size: 1.2rem;
  }
  .header-search-form form {
    display: flex;
    gap: 5px;
  }
  .header-search-form input[type='search'] {
    padding: 5px;
    border: 1px solid var(--color-secondary);
    border-radius: 4px;
    outline: none;
  }
  .header-search-form button {
    padding: 5px 10px;
    border: none;
    background: var(--color-secondary);
    color: var(--color-primary);
    border-radius: 4px;
    cursor: pointer;
  }
  .menu-toggle {
    display: flex;
    flex-direction: column;
    gap: 5px;
    cursor: pointer;
  }
  .menu-toggle span {
    width: 25px;
    height: 3px;
    background: var(--color-secondary);
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  .menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  .menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }
  .menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }
  @media (min-width: 768px) {
    .header-content-wrap {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
    .header-nav {
      display: flex !important;
      flex-direction: row;
    }
    .header-nav-list {
      flex-direction: row;
      gap: 20px;
    }
    .header-search-form {
      display: block;
    }
    .menu-toggle {
      display: none;
    }
  }
</style>

<header>
  <div class="container">
    <div class="header-content-wrap">
      <div class="header-top">
        <div class="header-search-wrap">
          <div class="header-search-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-search"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="10" cy="10" r="7" />
              <line x1="21" y1="21" x2="15" y2="15" />
            </svg>
          </div>
          <div class="header-search-form">
            <form action="/search" method="get" role="search">
              <input type="search" name="q" placeholder="Search..." aria-label="Search">
              <button type="submit">Search</button>
            </form>
            <div class="header-search-close">X</div>
          </div>
        </div>
        <div class="header-logo">
          {%- if section.settings.logo != blank -%}
            <a href="{{ shop.url }}">
              {{
                section.settings.logo
                | image_url: width: 300
                | image_tag: loading: 'eager', class: 'header-logo-item', alt: section.settings.logo.alt
              }}
            </a>
          {%- else -%}
            <a href="{{ shop.url }}" class="header-logo-text">{{ shop.name }}</a>
          {%- endif -%}
        </div>
        <div class="header-cart">
          <a href="{{ routes.cart_url }}" class="header-cart-link" aria-label="Cart">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-shopping-cart"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="6" cy="19" r="2" />
              <circle cx="17" cy="19" r="2" />
              <path d="M17 17h-11v-14h-2" />
              <path d="M6 5l14 1l-1 7h-13" />
            </svg>
            <span class="cart-count">{{ cart.item_count }}</span>
          </a>
        </div>
        <div class="menu-toggle">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
      <div class="header-nav">
        <ul class="header-nav-list">
          {%- for link in linklists[section.settings.menu].links -%}
            <li class="header-nav-item">
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
</header>
<script>
  document.querySelector('.menu-toggle').addEventListener('click', function () {
    document.querySelector('.header-nav').classList.toggle('active');
    this.classList.toggle('active');
  });
  document.querySelector('.header-search-icon').addEventListener('click', function () {
    document.querySelector('.header-search-form').classList.add('active');
  });
  document.querySelector('.header-search-close').addEventListener('click', function () {
    document.querySelector('.header-search-form').classList.remove('active');
  });
  window.addEventListener('scroll', function () {
    const header = document.querySelector('header');
    if (window.scrollY > 50) {
      header.style.background = 'var(--color-primary-dark)';
    } else {
      header.style.background = 'var(--color-primary)';
    }
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "link_list", "id": "menu", "label": "Menu" }
  ]
}
{% endschema %}
