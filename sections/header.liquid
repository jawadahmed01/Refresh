<style>
  header {
    background: var(--color-primary);
    color: var(--color-secondary);
    padding: 20px 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
  }
  .header-hidden {
    transform: translateY(-100%);
    transition: transform 0.3s ease-in-out;
  }
  .header-content-wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 15px;
  }
  .header-top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1200px;
    padding: 0 20px;
  }
  .header-logo {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  .header-logo-item {
    max-height: 50px;
    width: auto;
  }
  .header-cart {
    position: relative;
    cursor: pointer;
  }
  .header-logo-text {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-secondary);
    text-decoration: none;
  }
  .header-nav {
    width: 100%;
    background: var(--color-white);
  }
  .header-nav-list {
    display: flex;
    justify-content: center;
    gap: 30px;
    list-style: none;
    padding: 10px 20px;
  }
</style>
<header>
  <div class="container">
    <div class="header-content-wrap">
      <div class="header-top-bar">
        <div class="header-search-bar">
          {%- render 'search-bar' -%}
        </div>
        <div class="header-logo">
          {%- if section.settings.logo != blank -%}
            <a href="{{ shop.url }}">
              {{
                section.settings.logo
                | image_url: width: 300
                | image_tag: loading: 'eager', class: 'header-logo-item', alt: section.settings.logo.alt
                | escape
              }}
            </a>
          {%- else -%}
            <a href="{{ shop.url }}" class="header-logo-text">{{ shop.name }}</a>
          {%- endif -%}

          <div class="header-cart">
            {%- render 'cart-icon' -%}
          </div>
        </div>
      </div>
      <nav class="header-nav">
        <ul class="header-nav-list">
          {%- for link in linklists[section.settings.menu].links -%}
            <li class="header-nav-item">
              <a href="{{ link.url }}" class="header-nav-link">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const cartIcon = document.querySelector('.header-cart');
    const cartDrawer = document.querySelector('.cart-drawer');

    if (cartIcon && cartDrawer) {
      cartIcon.addEventListener('click', function () {
        cartDrawer.classList.toggle('open');
      });
    }
  });
  document.addEventListener('DOMContentLoaded', function () {
    const searchIcon = document.querySelector('.header-search-icon');
    const searchBar = document.querySelector('.header-search-bar form');

    if (searchIcon && searchBar) {
      searchIcon.addEventListener('click', function () {
        searchBar.classList.toggle('visible');
        if (searchBar.classList.contains('visible')) {
          searchBar.querySelector('input').focus();
        }
      });
    }
  });
  document.addEventListener('DOMContentLoaded', function () {
    const header = document.querySelector('header');
    let lastScrollTop = 0;

    window.addEventListener('scroll', function () {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      if (scrollTop > lastScrollTop && scrollTop > 100) {
        header.classList.add('header-hidden');
      } else {
        header.classList.remove('header-hidden');
      }
      lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
    });
  });
</script>
{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}
