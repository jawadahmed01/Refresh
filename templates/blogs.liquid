{% endcomment %}
<section class="blog-category container">
  <h1 class="page-title">{{ blog.title }}</h1>

  <div class="blog-grid">
    {% for article in blog.articles %}
      <div class="blog-card">
        <a href="{{ article.url }}">
          {% if article.image %}
            <img src="{{ article.image | img_url: 'large' }}" alt="{{ article.title }}">
          {% endif %}
          <h2>{{ article.title }}</h2>
          <p>{{ article.excerpt | strip_html | truncate: 120 }}</p>
        </a>
        <span class="date">{{ article.published_at | date: "%B %d, %Y" }}</span>
      </div>
    {% else %}
      <p>No articles found in this category.</p>
    {% endfor %}
  </div>
</section>
<style>
  .blogs-main, .blog-category, .article-detail {
  padding: 60px 20px;
}

.page-title {
  font-size: 32px;
  text-align: center;
  margin-bottom: 40px;
}

.blog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 24px;
}

.blog-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  padding: 16px;
  transition: transform 0.3s;
}

.blog-card:hover {
  transform: translateY(-5px);
}

.blog-card img {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 10px;
}

.blog-card h3, .blog-card h2 {
  font-size: 18px;
  color: #222;
}

.blog-card p {
  color: #555;
  font-size: 14px;
}

.date {
  display: block;
  margin-top: 8px;
  color: #888;
  font-size: 13px;
}

.view-all {
  font-size: 14px;
  color: #007acc;
  text-decoration: underline;
}

.article-content {
  max-width: 800px;
  margin: 0 auto;
}

.article-image {
  width: 100%;
  border-radius: 10px;
  margin-bottom: 20px;
}

.back-btn {
  display: inline-block;
  margin-bottom: 20px;
  color: #007acc;
  text-decoration: none;
}

</style>