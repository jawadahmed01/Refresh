<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>
      {{ page_title }}
      -
      {{ shop.name }}
    </title>
    {{ content_for_header }}

    <!-- Fonts -->
    <style>
      /* Dynamic Fonts */
      body {
        font-family: {{ settings.body_font.family }}, sans-serif;
      }
      h1, h2, h3, h4, h5, h6 {
        font-family: {{ settings.heading_font.family }}, sans-serif;
      }

      /* Dynamic Colors */
      :root {
        --color-primary: {{ settings.primary_color }};
        --color-secondary: {{ settings.secondary_color }};
        --color-background: {{ settings.background_color }};
        --color-text: {{ settings.text_color }};
      }
    </style>

    <!-- Main CSS -->
    <link rel="stylesheet" href="{{ 'base.css' | asset_url }}">
  </head>
  <body>
    <header>
      {% sections 'header-group' %}
    </header>

    <main role="main">
      {{ content_for_layout }}
    </main>

    <footer>
      {% sections 'footer-group' %}
    </footer>

    <!-- JavaScript at Bottom -->
    <script src="{{ 'theme.js' | asset_url }}" defer></script>
    {{ content_for_footer }}
  </body>
</html>
